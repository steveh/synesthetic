<%= form_tag(letters_path, { :method => :put }) do %>

  <% @letter_map.each do |letter, colour| %>
    <%= label_tag "letter_#{letter}", letter.upcase %>
    <%= text_field_tag "letters[#{letter}]", colour, :id => "letter_#{letter}" %>
    <br />
  <% end %>

  <%= submit_tag "Update colours" %>

<% end %>